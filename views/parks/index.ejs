<% include ../partials/header %>
  <header class="jumbotron">
    <h1><span class="glyphicon glyphicon-leaf align-bottom" aria-hidden="true"></span> Welcome to Park Review!</h1>
    <p>View our hand-picked parks around the world</p>
    <form class="form-inline" action="/parks" method="GET">
      <div class="form-group has-feedback">
        <label for="search"></label>
        <input class="form-control" type="text" name="search" placeholder="Search Parks" autocomplete="off" />
        <span class="glyphicon glyphicon-search form-control-feedback" aria-hidden="true"></span>
      </div>
    </form>
    <hr>
    <a class="pull-right" href="/parks/new">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      Share New Park
    </a>
  </header>

  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% if (noMatch !== null) {%>
      <div class="col-md-12">
        <h4><%= noMatch %></h4>
      </div>
    <% } %>
    <% parks.forEach(park => {%>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail card">
          <img class="park__image" data-src="<%= park.image.url %>" alt="<%= park.name %>" />
          <div class="caption">
            <h4 class="caption"><%= park.name %></h4>
          </div>
          <p>
            <a class="btn btn-primary btn-sm btn-b-mg" href="/parks/<%= park._id %>">
              More Info
            </a>
          </p>
        </div>
      </div>
    <% })%>
  </div>
<% include ../partials/footer %>
